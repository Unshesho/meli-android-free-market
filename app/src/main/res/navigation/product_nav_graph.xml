<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_nav_graph"
    app:startDestination="@+id/productListFragment">

    <fragment
        android:id="@+id/productListFragment"
        android:name="com.meli.freemarket.features.products.ui.list.ProductListFragment"
        tools:layout="@layout/fragment_product_list">

        <action
            android:id="@+id/from_product_list_to_detail"
            app:destination="@id/productDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.meli.freemarket.features.products.ui.detail.ProductDetailFragment">
        <argument
            android:name="productId"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="productRate"
            app:argType="float"/>
    </fragment>

</navigation>