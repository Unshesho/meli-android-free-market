<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <ImageView
        android:id="@+id/component_thumbnail_card_image_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ui_margin_9"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <TextView
        android:id="@+id/component_thumbnail_card_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ui_header_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/component_thumbnail_card_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ui_body_14"
        app:layout_constraintBottom_toBottomOf="@id/component_thumbnail_card_rating_bar"
        app:layout_constraintStart_toStartOf="@id/component_thumbnail_card_rating_bar"
        app:layout_constraintTop_toBottomOf="@id/component_thumbnail_card_product_name"
        app:layout_constraintTop_toTopOf="@id/component_thumbnail_card_rating_bar" />

    <RatingBar
        android:id="@+id/component_thumbnail_card_rating_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:padding="0dp"
        android:scaleX="0.4"
        android:scaleY="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/component_thumbnail_card_product_name" />

    <TextView
        android:id="@+id/component_thumbnail_card_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ui_header_24"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/component_thumbnail_card_rating_bar" />
</merge>